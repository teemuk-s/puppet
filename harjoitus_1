#moduuli asentaa tuoreet versiot irssist채 sek채 screenist채, sek채 vaihtaa irssin asetustiedoston

class irssi {

	exec { 'apt-get update':
    		command => '/usr/bin/apt-get update',
    	}
	
	package { 'irssi':
		ensure => installed,
	}

	package { 'screen':
		ensure => installed,
	}

	file { '/home/teemu/.irssi/config':
		content => template('irssi/config'),
	}
	
}
